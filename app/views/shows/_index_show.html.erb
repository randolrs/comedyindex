
<% unless @review_index %>

  <%= link_to(show_with_url_path(show.url_slug)) do %>

    <div class="card">
      
      <div class="image-container">
        
        <%= image_tag show.image.url(:medium), class: "small-index-image"%>

      </div>

      <div class="detail-container">
        
        <p class="title"><%= show.name %></p>

        <p><%= show.display_date %></p>

        <p><%= show.venue_id %></p>

        <p><div class="img-stars <%= show.css_rating_code %>"></div>(<%= show.average_rating %>) | <%= show.show_reviews.count %> Reviews</p>

      </div>

    </div>

  <% end %>

<% else %>

    <div class="card">
      
      <div class="image-container">
        
        <%= image_tag show.image.url(:medium), class: "small-index-image"%>

      </div>

      <div class="detail-container">
        
        <p class="title"><%= show.name %></p>

        <p>Venue McGullicuddy</p>
        <p>Rating: <%= show.average_rating %>/5.0 | <%= show.show_reviews.count %> Reviews</p>
        <p><%= link_to "Start Your Review", new_review_path(show.id), class:"red-text"%></p>

      </div>

    </div>

<% end %>
