<div class="form-container">

  <%= form_for(@show) do |f| %>
    <% if @show.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@show.errors.count, "error") %> prohibited this show from being saved:</h2>

        <ul>
        <% @show.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <h2 class="form-section-header">Event Details</h2>

    <div class="field">
      <label>Event Title</label><br>
      <%= f.text_field :name %>
    </div>

    <div class="field">

      <label>Event Image</label>

      <div class="image-field-container">
        
        <h3>Click to Add Event Picture</h3>

        <%= f.file_field :image, class: "form-control" %>

      </div>

    </div>

    <div class="field">
      <%= f.label :start_time %><br>
      <%= f.datetime_select :start_time, :ampm => true, :minute_step => 15 %>
    </div>

    <%= f.fields_for :show_occurences do |builder| %>
      <%= render 'show_occurence_fields', f: builder %>
    <% end %>

    <%= link_to_add_fields "Add Date", f, :show_occurences %>


    <div class="field">
      <%= f.label :venue_id %><br>
      <%= f.number_field :venue_id %><br>
      
      <%= f.label :address_line_1 %><br>
      <%= f.text_field :address_line_1 %><br>

      <%= f.label :address_line_2 %><br>
      <%= f.text_field :address_line_2 %><br>

      <%= f.label :city %><br>
      <%= f.text_field :city %><br>

      <%= f.label :state_province %><br>
      <%= f.text_field :state_province %><br>
   
    </div>
    
    <div class="field">
      <label>Event Website URL</label><br>
      <%= f.text_field :website_url %>
    </div>

    <div class="field">
      <label>Event Description</label><br>
      <%= f.text_area :about %>
    </div>


    <div class="actions">
      <input type="submit" class="button green-background" value="Create Show">
    </div>

  <% end %>

</div>
