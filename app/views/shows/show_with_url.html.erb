<div class="profile-header-banner dark-brand-gradient">

</div>

<div class="profile-content">

  <div class="profile-title-container">

    <div class="profile-image-container">
      
      <%= image_tag @show.image.url(:medium), class: ""%>
    
    </div>

    <div class="profile-detail-container">

      <h1><%= @show.name %></h1>

      <p><%= @show.about %></p>

      <% if user_signed_in?%>
      
        <p class="blue-text clickable profile-edit-action">Edit Show Description</p>
      
      <%end%>

      <p><%= @show.display_date %></p>

      <p>Rating: <%= @show.average_rating %>/5.0</p>
      
      <div class="button-container">

        <%= link_to "Write a Review", new_review_path(@show.id), class:"button green-background"%>

      </div>

<!--       <%# if @show.website_url %>
        
        <div class="button-container">
            
          <a class="button blue-background" href="<%# @show.website_url %>">Website</a>

        </div>
        
      <%#end%> -->

    </div>

  </div>

  <div class="profile-body-container">

    <div class="profile-body-main">

      <div class="profile-section">

        <p class="section-title">Reviews</p>
        
        <table>
        
          <% @show.show_reviews.all.each do |review| %>

            <tr><td><%= review.rating %></td><td><%= review.body %></td></tr>

          <%end%>
          
        </table>

      </div>


      <div class="profile-section">

        <p class="section-title">Featured Comics</p>

        <div class="image-grid">

          <% Performer.all.each do |performer| %>

            <%= link_to performer do %>
              
              <div class="entry">

                <div class="image-container">
                  
                  <%= image_tag performer.image.url(:medium), class:"medium round" %>
        
                </div>

                <div class="detail-container centered">

                  <a class="metadata name"><%= performer.name %></a>

                </div>

              </div>

            <%end%>

          <%end%>

        </div>

        <% if user_signed_in?%>

          <a class="blue-text clickable profile-edit-action">Add Comics to Lineup</a>

        <%end%>

      </div>


      <div class="profile-section">

        <p class="section-title">About the Producer</p>

        <p>Producer producer</p>

        <% if user_signed_in?%>

          <p class="blue-text clickable profile-edit-action">Edit Your Bio</p>

        <%end%>

      </div>

    </div>


    <div class="profile-body-side">

      <div class="profile-body-side-content">

        <div class="profile-section">
        
          <%= render :partial => 'shows/date_and_time', :locals => {:show => @show} %>

        </div>

        <div class="profile-section">

          <%= render :partial => 'shows/full_address', :locals => {:show => @show} %>

        </div>

        <div class="profile-section">

          <%= render :partial => 'shows/more_dates', :locals => {:show => @show} %>

        </div>

      </div>
  
    </div>

  </div>









</div>
