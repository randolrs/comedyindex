<div class="profile-header-banner dark-brand-gradient">

</div>



  <div class="profile-content">

    <div class="profile-title-container">

      <div class="profile-image-container">
        
        <%= image_tag @show.image.url(:medium), class: ""%>
      
      </div>

      <div class="profile-detail-container">

        <h1><%= @show.name %></h1>

        <p><div class="img-stars large <%= @show.css_rating_code %>"></div> <%= @show.show_reviews.count.to_s + " " + "Review".pluralize(@show.show_reviews.count) %></p>

        <br>

        <p><%= @show.display_date %></p>

        

        <% if user_signed_in?%>

          <p class="blue-text clickable profile-edit-action"><%= link_to "Edit", edit_show_path(@show), class:"blue-text"%></p>

        <%end%>
        
        <div class="button-container">
          <% if @show.show_reviews.count > 0 %>
            <%= link_to "Write a Review", new_review_path(@show.id), class:"button green-background"%>
          <%else%>
            <%= link_to "Be First to Review", new_review_path(@show.id), class:"button green-background"%>
          <%end%>

        </div>

  <!--       <%# if @show.website_url %>
          
          <div class="button-container">
              
            <a class="button blue-background" href="<%# @show.website_url %>">Website</a>

          </div>
          
        <%#end%> -->

      </div>

    </div>

    <div class="profile-body-container">

      <div class="profile-body-main">


        <section class="profile-section">

          <header class="section-title">About the Show</header>

          <p><%= @show.about %></p>

        </section>


        <section class="profile-section">

          <header class="section-title">Reviews</header>
          
          <% if @show.show_reviews.count > 0 %>
            
            <table class="review-index">
            
              <% @show.show_reviews.all.each do |review| %>
                <tr>
                  <td>
                    <%= image_tag review.user.image.url(:small), class: "reviewer-small-image" %><br>
                    <%= review.user.email.first(5) %><br>
                    <%= Market.find(review.user.default_market_id).name %>
                  </td>
                  <td>
                    <div class="img-stars <%= review.css_rating_code %>"></div><br>
                    <i>"<%= review.body %>"</i>
                  </td>

                </tr>

              <%end%>
              
            </table>

          <%else%>

            No Reviews Yet. Be the first to <%= link_to "post a review", new_review_path(@show.id), class:"blue-text" %>.

          <%end%>

        </section>


        <section class="profile-section">

          <header class="section-title">Featured Comics</header>

          <div class="image-grid">

            <% Performer.all.each do |performer| %>

              <%= link_to performer do %>
                
                <div class="entry">

                  <div class="image-container">
                    
                    <%= image_tag performer.image.url(:medium), class:"medium round" %>
          
                  </div>

                  <div class="detail-container centered">

                    <a class="metadata name"><%= performer.name %></a>

                  </div>

                </div>

              <%end%>

            <%end%>

          </div>


        </section>




        <section class="profile-section">

          <header class="section-title">About the Producer</header>

          <p>Producer producer</p>

        </section>

      </div>


      <div class="profile-body-side">

        <div class="profile-body-side-content">

          <section class="profile-section">
          
            <%= render :partial => 'shows/date_and_time', :locals => {:show => @show} %>

          </section>

          <section class="profile-section">

            <%= render :partial => 'shows/full_address', :locals => {:show => @show} %>

          </section>

          <% if @show.more_dates %>
            
            <section class="profile-section">

              <%= render :partial => 'shows/more_dates', :locals => {:show => @show} %>

            </section>

          <%end%>

          <% if @show.venue_id %>

            <section class="profile-section">

              <header class="section-title">About the Venue</header>

              <p><%= @show.venue.about %></p>

              <p><a class="blue-text" href="<%= @show.venue.website_url %>">Website <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span></a></p>

            </section>

          <%end%>

        </div>
    
      </div>

    </div>

  </div>

