<div class="content">

	<h1 class="centered mega light-text-shadow">Producer Signup</h1>

	<div class="form-container medium">

		<%= form_for(:user, :url => registration_path(:user)) do |f| %>

			<div class="field">
			  <label>Email</label>
			  <br>
			  <%= f.email_field :email, autofocus: true, placeholder: "Email", :required => true %>
			</div>

			<div class="field">
			  <label>Password</label>
			  <br>
			  <%= f.password_field :password, autocomplete: "off", placeholder: "Password", required: true, :required => true %>
			</div>

			<%= hidden_field_tag 'is_producer', true %>

			<div class="actions">
			  <%= f.submit "Next", class: "button medium orange-background" %>
			</div>

		<% end %>

	</div>

	<p class="centered"><%# link_to "Login", login_path %></p>

</div>