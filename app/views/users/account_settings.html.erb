<div class="content">

	
	<div class="form-container medium">

		<%= form_for(current_user, url: registration_path(current_user), html: { method: :put }) do |f| %>

			<div class="field">

		      <label>Profile Picture</label>

		      <div class="image-field-container">
		        
		        <h3>Click to Add Profile Picture</h3>

		        <%= f.file_field :image, class: "form-control" %>

		      </div>

		    </div>

		    <div class="field">
		      <%= f.label :email %><br />
		      <%= f.email_field :email %>
		    </div>

		    <div class="field">
		      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
		      <%= f.password_field :password, autocomplete: "off" %>
		      <% if @minimum_password_length %>
		        <br />
		        <em><%= @minimum_password_length %> characters minimum</em>
		      <% end %>
		    </div>

		    <div class="actions">
		      <%= f.submit "Update", class:"button orange-background" %>
		    </div>

		<% end %>


	</div>


</div>