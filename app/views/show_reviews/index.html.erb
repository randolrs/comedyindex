<p id="notice"><%= notice %></p>

<h1>Listing Show Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Show</th>
      <th>Show occurence</th>
      <th>Title</th>
      <th>Body</th>
      <th>Rating</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @show_reviews.each do |show_review| %>
      <tr>
        <td><%= show_review.show_id %></td>
        <td><%= show_review.show_occurence_id %></td>
        <td><%= show_review.title %></td>
        <td><%= show_review.body %></td>
        <td><%= show_review.rating %></td>
        <td><%= show_review.author_id %></td>
        <td><%= link_to 'Show', show_review %></td>
        <td><%= link_to 'Edit', edit_show_review_path(show_review) %></td>
        <td><%= link_to 'Destroy', show_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

