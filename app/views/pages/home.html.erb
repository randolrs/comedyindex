

<% if session[:city].blank?  %>
	
	<div class="welcomes-container">

		<div class="welcomes-overlay">

			<div class="welcomes-content">

				<h2>Hello & Welcome To ComedyHere</h2>

				<br>

				<p>We curate the best live comedy events going on in your city. ComedyHere is the best place to stay up to date on all the best live comedy in your city, from independent shows in your neighborhood to national headliners visiting your city.</p>

			</div>

		</div>

	</div>

	<%= render 'pages/home_location_cta' %>

<%else%>
	
	<%= render :partial => 'pages/search', :locals => {:location => session[:city], :latitude => session[:latitude], :longitude => session[:longitude]} %>

<%end%>


