	<% end %>

	<%= link_to root_path do %>

		<div class="card flat">
			See More Staff Picks for <%= @market["name"] %> <span style="float: right;" class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
		</div>

	<%end%>

</section>


<%else%>

	<%= render 'users/dashboard' %>

<%end%>