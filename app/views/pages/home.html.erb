<%# render 'home_sub_header' %>


<%= render 'modals/mobile_search_filter' %>


<div class="dashboard">

	<% unless @city %>
		
		<%= render 'pages/home_location_cta' %>

	<%end%>

	<%# if @city %>

		<div class="row">

			<div class="col-xs-12 col-sm-12">

				<section class="home-index">

					<header class="home-section-header">Tonight</header>
					
					<div class="row">
						
						<% Show.all.take(4).each do |show| %>

							<div class="col-xs-12 col-sm-6 col-md-3">
					  			
					  			<%= render :partial => 'shows/index_show', :locals => {:show =>  show} %>

					  		</div>

						<% end %>

					</div>

				</section>

				<% unless user_signed_in? %>
					
					<%= render 'pages/home_signup_cta' %>

				<%end%>

				<%(Date.tomorrow..Date.tomorrow + 7).each do |date| %>

					<section class="home-index">

						<header class="home-section-header"><%= date.strftime("%a %b %e")%></header>
						
						<div class="row">
							
							<% Show.all.take(9).each do |show| %>
								<div class="col-xs-12 col-sm-4 col-md-3">
						  		<%= render :partial => 'shows/index_show', :locals => {:show =>  show} %>
						  		</div>

							<% end %>

						</div>

					</section>


				<% end %>

			</div>

		</div>

	<%#else%>
		
		<section>

			<h2 class="centered">Where are You?</h2>
		
			<div class="row padded-cols">

				<div class="col-xs-6 col-sm-3">
					<div class="card centered">
						NYC
					</div>
				</div>

				<div class="col-xs-6 col-sm-3">
					<div class="card centered">
						LAX
					</div>
				</div>

				<div class="col-xs-6 col-sm-3">
					<div class="card centered">
						SF
					</div>
				</div>

				<div class="col-xs-6 col-sm-3">
					<div class="card centered">
						Montreal
					</div>
				</div>

			</div>

		</section>

	<%#end%>

</div>


	<%# render 'users/dashboard' %>
