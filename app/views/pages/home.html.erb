<% unless user_signed_in?%>

<section class="home-form">
	
	<span class="dismiss-parent">X</span>

	<div class="section-overlay">
	
		<div class="section-content centered">

			<header>Discover the Best Comedy in Your City</header>

				<br><br>

			<a class="button medium blue-background">Get Started</a>

		</div>

	</div>

</section>

<section class="home-index centered">

	<header class="main-header" style="display: inline-block;">Zilla <%= @market["name"] %></header><br><span class="blue-text modal-cta" data-modal-id="select-city" style="display: inline-block;">Change City</span>


</section>

<section class="home-index">

	<header class="home-section-header">Tonight in <%= @market["name"] %></header>

	<% Show.all.take(3).each do |show| %>

  		<%= render :partial => 'shows/index_show', :locals => {:show =>  show} %>

	<% end %>

	<%= link_to root_path do %>

		<div class="card flat">
			See More Comedy Shows Tonight in <%= @market["name"] %> <span style="float: right;" class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
		</div>

	<%end%>

</section>

<section class="home-index">

	<header class="home-section-header">This Weekend in <%= @market["name"] %></header>

	<% Show.all.take(3).each do |show| %>

  		<%= render :partial => 'shows/index_show', :locals => {:show =>  show} %>

	<% end %>

	<%= link_to root_path do %>

		<div class="card flat">
			See More Comedy Shows this Weekend in <%= @market["name"] %> <span style="float: right;" class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
		</div>

	<%end%>

</section>

<section class="home-index">

	<header class="home-section-header">Hot & New Comedy Shows in <%= @market["name"] %></header>

	<% Show.all.take(3).each do |show| %>

  		<%= render :partial => 'shows/index_show', :locals => {:show =>  show} %>

	<% end %>

	<%= link_to root_path do %>

		<div class="card flat">
			See More Hot & New Comedy Shows in <%= @market["name"] %> <span style="float: right;" class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
		</div>

	<%end%>

</section>

<section class="home-index">

	<header class="home-section-header">Staff Picks for <%= @market["name"] %></header>

