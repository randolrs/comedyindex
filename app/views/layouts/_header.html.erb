<div class="header-container">

	<div class="header-options left">

		<ul class="horizontal">
			
			<li><button class="hamburger mobile-only modal-cta" data-modal-id="main-menu">&#9776;</button></li>

			<li><a class="logo" href="<%= root_path %>"><span style="color: #EEE84C;">COMICS</span></a></li>

			<li><%= link_to "Shows", shows_path, class:"full-screen-only" %></li>

			<li><%= link_to "Venues", venues_path, class:"full-screen-only" %></li>

			<li><%= link_to "Comics", performers_path, class:"full-screen-only" %></li>

		</ul>

	</div>


	<div class="header-options right">

		<ul class="horizontal full-screen-only">

			<% if user_signed_in? %>

				<li><%= link_to "+ New Show", new_show_path %></li><li><%= link_to "My Account", account_path %></li>

			<%else%>

				<li><%= link_to "Log In", login_path %></li><li><%= link_to "Sign Up", signup_path %></li>

			<%end%>



		</ul>

		<ul class="horizontal mobile-only">

			<% if user_signed_in? %>

				<li><a href="<%= new_show_path%>"><span class="glyphicon glyphicon-plus"></span></a></li>

				<li><a href="<%= account_path%>"><span class="glyphicon glyphicon-cog"></span></a></li>

			<%else%>

				

			<%end%>



		</ul>


	</div>




</div>
