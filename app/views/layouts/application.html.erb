<!DOCTYPE html>
<html>

	<head>

		<title>COMICS <% if @main_SEO_title %>| <%= @main_SEO_title %><%end%></title>

		<meta name="description" content="A networking tool forto find connections to recommended job candidates, industry experts and business partners. Allows registered users to maintain a list of">

		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">

		<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
		

		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>

		<link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">

	</head>

	<body>

		<% unless @hide_header %>
			<%= render 'layouts/header' %>
			<%= render 'modals/main_menu' %>
		<%end%>

		<div class="content-container">

			<% flash.each do |name, msg| %>
     			<%= content_tag(:div, msg, class: "alert alert-#{name}") %>
			<% end %>

			<%= yield %>
		
		</div>

		<% unless @hide_footer %>
			<%= render 'layouts/footer' %>
		<%end%>

	</body>

</html>
